{
    // font settings
    "editor.fontSize": 16,
    "editor.fontFamily": "JetBrains Mono", // このフォントは自由
    "editor.fontLigatures": true,
    "editor.fontWeight": "500",
    // color theme settings
    "workbench.colorTheme": "Tokyo Night", // このテーマは自由
    // vim settings
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true, // 検索結果をハイライト
    "vim.handleKeys": {
        "<C-y>": true,
        // 以下はVimのショートカットを使わない
        "<C-c>": false, // コピー
        "<C-v>": false, // ペースト
        "<C-x>": false, // カット
        "<C-a>": false, // 全選択
        "<C-f>": false, // 検索 
    },
    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            // xで削除したときにクリップボードに入れない
            "before": [
                "x"
            ],
            "after": [
                "\"",
                "_",
                "x"
            ]
        },
        {
            // sで修正したときにクリップボードに入れない
            "before": [
                "s"
            ],
            "after": [
                "\"",
                "_",
                "s"
            ]
        },
        {
            // Explorerを開く
            "before": [
                "<leader>",
                "e"
            ],
            "commands": [
                ":Ex"
            ]
        },
        {
            // Explorerを開く
            "before": [
                "<leader>",
                "q"
            ],
            "commands": [
                {
                    "command": "workbench.action.closeActiveEditor",
                    "args": []
                }
            ]
        },
    ],
    // other settings
    "files.autoSave": "afterDelay",
    "editor.formatOnSave": true,
    "editor.minimap.enabled": false, // ミニマップを非表示
    "files.insertFinalNewline": true, // ファイルの保存時に改行を末尾に挿入
}
