{
    // font settings
    "editor.fontSize": 16,
    "editor.fontFamily": "JetBrains Mono", // このフォントは自由
    "editor.fontLigatures": true,
    "editor.fontWeight": "600",
    // color theme settings
    "workbench.colorTheme": "GitHub Dark Colorblind (Beta)", // このテーマは自由
    // vim settings
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true, // 検索結果をハイライト
    "editor.lineNumbers": "relative", // 相対的行番号
    "vim.handleKeys": {
        "<C-y>": true,
        // 以下はVimのショートカットを使わない
        "<C-c>": false, // コピー
        "<C-v>": false, // ペースト
        "<C-x>": false, // カット
        "<C-a>": false, // 全選択
        "<C-f>": false, // 検索 
    },
    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            // xで削除したときにクリップボードに入れない
            "before": [
                "x"
            ],
            "after": [
                "\"",
                "_",
                "x"
            ]
        },
        {
            // sで修正したときにクリップボードに入れない
            "before": [
                "s"
            ],
            "after": [
                "\"",
                "_",
                "s"
            ]
        },
        {
            // Explorerの閉開
            "before": [
                "<leader>",
                "e"
            ],
            "commands": [
                "workbench.action.toggleSidebarVisibility"
            ],
            "when": [
                "editorFocus && vim.mode == 'Normal'"
            ]
        },
        {
            // Explorerへ移動
            "before": [
                "<leader>",
                "o"
            ],
            "commands": [
                "workbench.action.focusSideBar"
            ],
        },
        {
            // ファイルを閉じる
            "before": [
                "<leader>",
                "q"
            ],
            "commands": [
                "workbench.action.closeActiveEditor"
            ],
        },
        {
            // ファイル検索
            "before": [
                "<leader>",
                "f",
                "f"
            ],
            "commands": [
                "find-it-faster.findFiles"
            ],
        },
        {
            // ファイル内検索
            "before": [
                "<leader>",
                "f",
                "w"
            ],
            "commands": [
                "find-it-faster.findWithinFiles"
            ],
        },
        {
            // 折り返しの見た目通りに移動する
            "before": [
                "j"
            ],
            "after": [
                "g",
                "j"
            ]
        },
        {
            // 折り返しの見た目通りに移動する
            "before": [
                "k"
            ],
            "after": [
                "g",
                "k"
            ]
        },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                "j"
            ],
            "after": [
                "g",
                "j"
            ]
        },
        {
            "before": [
                "k"
            ],
            "after": [
                "g",
                "k"
            ]
        }
    ],
    // other settings
    "files.autoSave": "afterDelay",
    "editor.formatOnSave": true,
    "editor.minimap.enabled": false, // ミニマップを非表示
    "files.insertFinalNewline": true, // ファイルの保存時に改行を末尾に挿入
    "editor.autoClosingBrackets": "always", // かっこ補完
    "editor.autoClosingQuotes": "always", // 引用符補完 
    "editor.wordWrap": "on",
    // settings for each environment
}
